{% extends "base.html.twig" %}

{% block body %}
  <h1>Ajouter une musique</h1>

  {% if album is null %}
    <div class="alert alert-warning" role="alert">
      Vous devez d'abord créer un album avant de pouvoir ajouter une musique.
    </div>
  {% endif %}

  <form
    action="{{ path('add_music', {id: album.id}) }}"
    method="post"
    class="mx-auto"
    style="max-width: 30rem;"
  >
    <div class="mb-3">
      <label for="title">Titre</label>
      <input
        type="text"
        name="title"
        id="title"
        class="form-control"
        placeholder="Titre"
      >
    </div>
    <div class="mb-3">
      <label for="duration">Durée</label>
      <input
        type="number"
        name="duration"
        id="duration"
        class="form-control"
        placeholder="Durée"
      >
    </div>
    <div class="text-end">
      <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i>
        Ajouter
      </button>
    </div>
  </form>
{% endblock body %}