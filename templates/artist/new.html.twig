{% extends "base.html.twig" %}

{% block body %}
  <h1>{{ artist ? 'Mettre à jour' : 'Ajouter' }} un artiste</h1>
  <form action="/artist/new" method="post" class="mx-auto" style="max-width: 30rem;">
    <div class="mb-3">
      <label for="name">Nom</label>
      <input
        type="text"
        value="{{ artist ? artist.name : '' }}"
        name="name"
        id="name"
        placeholder="Nom"
        class="form-control"
      >
    </div>
    <div class="mb-3">
      <label for="illustrationURL">Illustration</label>
      <input
        type="text"
        value="{{ artist ? artist.illustrationURL : '' }}"
        name="illustrationURL"
        id="illustrationURL"
        placeholder="URL de l'illustration"
        class="form-control"
      >
    </div>
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        class="form-control"
        placeholder="Description..."
        rows="5"
      >{{ artist ? artist.description : '' }}</textarea>
    </div>
    <div class="text-end">
      <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-save"></i>
        {{ artist ? 'Mettre à jour' : 'Ajouter' }}
      </button>
    </div>
  </form>
{% endblock body %}