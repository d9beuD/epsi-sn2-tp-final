{% extends "base.html.twig" %}

{% block body %}
  <div class="row">
    <div class="col-3">
      <img src="{{ album.illustrationURL }}" alt="{{ album.title }} cover" class="img-fluid rounded shadow mb-2">
      <p class="text-secondary">Album sorti le {{ album.releaseDate|date("d/m/Y") }}.</p>
    </div>
    <div class="col">
      <h2 class="fw-bold d-flex align-items-center">
        {{ album.title }}
        <a class="text-secondary small ms-2" href="{{ path('edit_album', {id: album.id}) }}">
          <i class="fa-solid fa-pencil" data-fa-transform="shrink-2"></i>
        </a>
      </h2>

      <div class="mb-2">
        <button class="btn btn-danger">
          <i class="fa-solid fa-play"></i>
          Lecture
        </button>
        <button class="btn btn-danger">
          <i class="fa-solid fa-shuffle"></i>
          Ordre al√©atoire
        </button>
        <button class="btn btn-secondary">
          <i class="fa-solid fa-plus"></i>
          Ajouter un morceau
        </button>
      </div>

      {% if album.musics|length != 0 %}
        <ul class="list-unstyled">
          {% for music in album.musics %}
            <li>{{ music.title }}</li>
          {% endfor %}
        </ul>
      {% else %}
        <p class="text-secondary">Il n'y a aucune musique.</p>
      {% endif %}
    </div>
  </div>
{% endblock body %}